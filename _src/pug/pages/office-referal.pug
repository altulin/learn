extends ../templates/_office.pug
include ../helpers/mixins.pug

block asside-active
  -const active = 4;

block content
  section.prog.office-container
    h2.prog__title.office-title Реферальная программа
    .prog__inner
      .prog__col-left
        .referral
          .referral__inner 
            p.referral__title-text.size-1 Делитесь с другими курсами BTC Trust<br>и получайте за это вознаграждение. 
            p.referral__text Реферальная программа BTC Trust предоставляет возможность всем желающим зарабатывать 10% от депозитов людей, которых вы пригласили. 
            p.referral__text  Вы пригласили друга, он приобрёл обучающую программу на сумму 10 000 ₽, вы получаете 1 000 ₽.


      .prog__col-right
        .prog__stat.stat.stat--vertical 
          h3.stat__title.size-1 Ваша реферальная ссылка
          p.stat__ref-link Btctrust.ru/referal/12345
          ul.stat__list.stat__list--vertical
            li.stat__item 
              span.stat__term Всего кликов по вашей ссылке:
              span.stat__def.size-1 3 клика
            li.stat__item 
              span.stat__term Оплачено программ по вашей ссылке:
              span.stat__def.size-1 2 программы
            li.stat__item 
              span.stat__term Ваш доход от рефералов:
              span.stat__def.stat__def--time.size-1 2 000 ₽